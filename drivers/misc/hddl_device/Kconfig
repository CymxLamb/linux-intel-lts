	tristate "Support for hddl device"
	default m
	depends on XLINK_CORE
	help
	  hddl device management

config HDDL_DEVICE_CLIENT
	tristate "Support for hddl device local host"
	depends on XLINK_CORE
	default y
	help
	  hddl device management for local host
